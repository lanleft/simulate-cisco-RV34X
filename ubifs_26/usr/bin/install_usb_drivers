#!/bin/sh                                                  
                               
DRIVER_FILE=`basename $1`       
DRIVER_FILE_DIR=`dirname $1`          
DOWN_DIR="/tmp/"                                                                  
INSTALL_STATUS=0                                                           
ASDSTATUS="/tmp/asdclientstatus"
                                                                                                      
if [ "$DRIVER_FILE_DIR" != "." ];then                                 
        #Absolute path
        if [ "$DRIVER_FILE_DIR" != "/tmp" ];then                                                                        
        	`cp -f $1 $DOWN_DIR`>/dev/null 2>&1                                
        fi
fi                                                                    

DRIVER_DIR="/tmp/driver"                                                               
mkdir -p $DRIVER_DIR                                                                           
                                                                   
mkdir -p $DRIVER_DIR-en
PKG_MD5_ENCODED="usbcode"
tar -xzf $DOWN_DIR$DRIVER_FILE -C $DRIVER_DIR-en

result="`/usr/bin/verify $DRIVER_DIR-en/kmod-usb-modem*tar.gz  $DRIVER_DIR-en/$PKG_MD5_ENCODED`" > /dev/null 2>&1
[ "$result" != "0" ] && {
	## verification failed, returning from here
	logger -t system -p local0.error "Failed : verification of usb driver image failed!"
	rm -f "$DOWN_DIR/$DRIVER_FILE"
	rm -rf "$DRIVER_DIR"
	rm -rf "$DRIVER_DIR-en"
	INSTALL_STATUS=1
	echo $INSTALL_STATUS > $ASDSTATUS
	exit $INSTALL_STATUS
}

# Extract the file
tar -xzf $DRIVER_DIR-en/kmod-usb-modem*.tar.gz -C $DRIVER_DIR
if [ "$?" -eq 0 ];then    
	# Install the driver
	`/${DRIVER_DIR}/sbin/usb-modem install` >/dev/null 2>&1
	INSTALL_STATUS="$?"	
else                                                          
        INSTALL_STATUS=1                                      
fi                                                                                
                                                                                  
rm -rf "$DOWN_DIR/$DRIVER_FILE"                                                        
rm -rf "$DRIVER_DIR"                                                  
rm -rf "$DRIVER_DIR-en"

echo $INSTALL_STATUS > $ASDSTATUS                                                               
exit $INSTALL_STATUS       
